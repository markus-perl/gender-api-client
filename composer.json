{
  "name": "gender-api/client",
  "description": "An easy to use API client for Gender-API.com",
  "keywords": [
    "gender api",
    "genderize",
    "gender of names"
  ],
  "homepage": "https://github.com/markus-perl/gender-api-client",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "GenderApi\\": "src/GenderApi/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GenderApiTest\\": "tests/GenderApiTest/",
      "GenderApiIntegration\\": "tests-integration/"
    }
  },
  "require": {
    "php": ">=8.3.0",
    "ext-mbstring": "*",
    "ext-fileinfo": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "config": {
    "sort-packages": true
  }
}